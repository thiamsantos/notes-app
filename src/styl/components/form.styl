.form
  background-color inherit
  bottom 0
  display none
  left 0
  position fixed
  right 0
  top 0

  &.show
    display block

  &__header
    @extends $flex
    padding $gutter-width

  &__title-field-wrapper
    @extends $flex
    margin 0 1rem
    width 100%

  &__field
    background transparent
    font-size inherit
    width 100%

    &--title
      border-bottom .1rem solid $baseline-input-color
      color $light-text-color-primary
      padding 1rem 0
      text-align center

    &--content
      background transparent
      font-family inherit
      height 100%
      padding $gutter-width
